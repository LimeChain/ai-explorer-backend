# Development Environment Overrides
# Copy this file to .env and update with your actual values
# Production configuration is managed by Terraform

ENVIRONMENT=development
LOG_LEVEL=INFO
FORCE_TERMINAL=true

REQUEST_TIMEOUT=1
ALLOWED_ORIGINS=["*"]

# AI
LLM_API_KEY=openai-api-key-placeholder
LLM_PROVIDER=openai # google_genai
LLM_MODEL=gpt-4.1 # gemini-2.5-pro
EMBEDDING_MODEL=text-embedding-3-small # gemini-embedding-001

LLM_INPUT_COST_PER_TOKEN=0.000002
LLM_OUTPUT_COST_PER_TOKEN=0.000008

# MCP
# MCP_ENDPOINT=http://0.0.0.0:8001/mcp
# Docker Compose
MCP_ENDPOINT=http://mcp-server:8001/mcp

# Database / Vector Store
# DATABASE_URL=postgresql://ai_explorer:ai_explorer@localhost:5432/ai_explorer
# Docker Compose
DATABASE_URL=postgresql://ai_explorer:ai_explorer@postgres:5432/ai_explorer

# Redis
REDIS_URL=redis://localhost:6379/0

# Rate Limits
RATE_LIMIT_MAX_REQUESTS=5
RATE_LIMIT_WINDOW_SECONDS=60
GLOBAL_RATE_LIMIT_MAX_REQUESTS=50
GLOBAL_RATE_LIMIT_WINDOW_SECONDS=60

# Cost Control
PER_USER_COST_LIMIT=2 # USD
PER_USER_COST_PERIOD_SECONDS=86400 # 24 hours
GLOBAL_COST_LIMIT=200 # USD
GLOBAL_COST_PERIOD_SECONDS=31536000 # 365 days

# SaucerSwap
SAUCERSWAP_API_KEY=saucerswap-api-key

# Hgraph
HGRAPH_SECRET_KEY=""
HGRAPH_API_KEY=""

# Tracing / Evals
LANGSMITH_TRACING=false
LANGSMITH_API_KEY=""
LANGSMITH_PROJECT=""
