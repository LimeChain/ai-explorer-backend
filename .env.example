# Development Environment Overrides
# Copy this file to .env and update with your actual values
# Production configuration is managed by Terraform

ENVIRONMENT=development
LOG_LEVEL=INFO

# LLM
LLM_PROVIDER=openai # google_genai
LLM_API_KEY=openai-api-key-placeholder
LLM_MODEL=gpt-4o-mini # gemini-2.5-pro
EMBEDDING_MODEL=text-embedding-3-small
LLM_INPUT_COST_PER_TOKEN=0.0000004
LLM_OUTPUT_COST_PER_TOKEN=0.0000016

# MCP Servers
MCP_ENDPOINT=http://localhost:8001/mcp/
# MCP_ENDPOINT=http://mcp-server:8001/mcp/ # This is for Docker, if you are going to run locally, change to http://localhost:8001/mcp/

# Database / Vector Store
COLLECTION_NAME=sdk_methods
DATABASE_URL=postgresql+psycopg://ai_explorer:ai_explorer@localhost:5432/ai_explorer
# DATABASE_URL=postgresql+psycopg://ai_explorer:ai_explorer@postgres:5432/ai_explorer # Docker

# Redis
REDIS_URL=redis://localhost:6379/0

# Rate Limits
RATE_LIMIT_MAX_REQUESTS=5
RATE_LIMIT_WINDOW_SECONDS=60
GLOBAL_RATE_LIMIT_MAX_REQUESTS=100
GLOBAL_RATE_LIMIT_WINDOW_SECONDS=60

# Cost Control
PER_USER_COST_LIMIT=1 # USD cost limit
PER_USER_COST_PERIOD_SECONDS=86400 # 86400 seconds = 24 hours
GLOBAL_COST_LIMIT=10 # USD cost limit
GLOBAL_COST_PERIOD_SECONDS=31536000 # 31536000 seconds = 365 days

# LangGraph
LANGSMITH_ENDPOINT=https://api.smith.langchain.com
LANGSMITH_API_KEY=langsmith-api-key-placeholder
LANGSMITH_PROJECT=ai-explorer-dev

# CORS
ALLOWED_ORIGINS=["*"]

# General
COST_THRESHOLD=0.01

